<Window x:Class="FileParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Center" Margin="0,81,0,0" Text="Please select a file.." TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="243,116,0,0" VerticalAlignment="Top" Click="BrowseBtn_Click" Visibility="Visible" Name="BrowseBtn"/>
        <TextBox HorizontalAlignment="Left" Margin="118,117,0,0" Text="..." TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="FileNameTextBox" ToolTipService.ShowOnDisabled="True" IsEnabled="False" Visibility="Visible" />
        <ProgressBar Height="10" Width="100" Margin="150,121,150,103" Visibility="Collapsed" Minimum="0" Maximum="100" Name="ProgressBarStatus"/>

    </Grid>
</Window>
